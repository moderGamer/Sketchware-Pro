<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip">
        <Spinner
            android:id="@id/spn_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:spinnerMode="dialog"
            style="@style/Widget.AppCompat.DropDownItem.Spinner" />
        <TextView
            android:textColor="#FF000000"
            android:textSize="12.0sp"
            android:textStyle="italic"
            android:id="@id/tv_type_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.0dip"
            android:layout_marginRight="24.0dip" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="#ffff0000"
            android:gravity="left"
            android:id="@id/tv_warning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28.0dip"
            android:layout_marginRight="24.0dip" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginLeft="24.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="24.0dip"
            android:importantForAutofill="noExcludeDescendants">
            <EditText
                android:textSize="16.0sp"
                android:id="@id/ed_input"
                android:textColor="#FF000000"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textSize="16.0sp"
            android:gravity="center|left"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:id="@id/tv_input_filename"
            android:paddingLeft="24.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input_filename"
            android:visibility="gone"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:importantForAutofill="noExcludeDescendants">
            <EditText
                android:textSize="16.0sp"
                android:textColor="#FF000000"
                android:id="@id/ed_input_filename"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:textSize="16.0sp"
            android:textColor="#FF000000"
            android:gravity="center|left"
            android:id="@id/tv_input_firebase_path"
            android:paddingLeft="24.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="#FF000000"
            android:textStyle="italic"
            android:id="@id/tv_desc_firebase_path"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginRight="24.0dip" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input_firebase_path"
            android:visibility="gone"
            android:layout_width="fill_parent"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:importantForAutofill="noExcludeDescendants">
            <EditText
                android:textSize="16.0sp"
                android:textColor="#FF000000"
                android:id="@id/ed_input_firebase_path"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>