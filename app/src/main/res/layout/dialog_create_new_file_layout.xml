<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20.0dip"
        android:paddingTop="15.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/rename_96_blue"
            android:scaleType="fitCenter" />
        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="#ff008dcd"
            android:id="@id/dialog_create_new_file_layoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a new file" />
    </LinearLayout>
    <RadioGroup
        android:orientation="vertical"
        android:id="@id/dialog_radio_filetype"
        android:paddingLeft="20.0dip"
        android:paddingTop="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@id/radio_button_folder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Folder" />
        <RadioButton
            android:id="@id/dialog_radio_filetype_class"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Class" />
        <RadioButton
            android:id="@id/dialog_radio_filetype_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Activity" />
    </RadioGroup>
    <com.google.android.material.textfield.TextInputLayout
        android:paddingLeft="20.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="20.0dip"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">
        <EditText
            android:textSize="14.0sp"
            android:textColorHint="#ff008dcd"
            android:id="@id/dialog_edittext_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:hint="Filename"
            android:inputType="text"
            android:autofillHints="" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:background="#ff09a7ec"
        android:paddingTop="10.0dip"
        android:paddingRight="18.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/dialog_text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:text="@string/common_word_cancel" />
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/dialog_text_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:text="@string/common_word_save" />
    </LinearLayout>
</LinearLayout>